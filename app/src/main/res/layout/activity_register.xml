<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/history" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/history" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header"
        android:gravity="top|center"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up for Starbucks"
            android:textColor="@color/starbucksClassic"
            android:textSize="30dp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:id="@+id/signupforstarbucks"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your Starbucks account"
            android:textColor="@color/starbucksClassic"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:id="@+id/createacc"
            android:layout_below="@+id/signupforstarbucks"
            android:layout_centerHorizontal="true"
            />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createacc"
            android:layout_marginTop="48dp"
            android:hint="First name"
            android:textAlignment="center"></EditText>

        <EditText
            android:id="@+id/surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="7dp"
            android:hint="Last name"
            android:textAlignment="center"></EditText>


        <EditText
            android:id="@+id/email_or_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surname"
            android:layout_marginTop="14dp"
            android:hint="Email or Phone number"
            android:textAlignment="center"></EditText>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_or_phonenumber"
            android:layout_marginTop="27dp"
            android:hint="New password"
            android:textAlignment="center"></EditText>

        <Button
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/password"
            android:layout_marginBottom="-181dp"
            android:background="#f5f7fa"
            android:text="Create Account"
            android:textColor="@color/starbucksClassic"
            android:layout_centerHorizontal="true"></Button>


    </RelativeLayout>
</RelativeLayout>