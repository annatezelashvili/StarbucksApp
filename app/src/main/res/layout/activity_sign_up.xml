<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/history" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/history" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header"
        android:gravity="top|center"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up for Starbucks"
            android:textColor="@color/starbucksClassic"
            android:textSize="30dp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:id="@+id/signupforstarbucks"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your Starbucks account"
            android:textColor="@color/starbucksClassic"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:id="@+id/createacc"
            android:layout_below="@+id/signupforstarbucks"
            android:layout_centerHorizontal="true"
            />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createacc"
        android:layout_marginTop="48dp"
        android:hint="Full name"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/emailOrPhonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullName"
        android:layout_marginTop="14dp"
        android:hint="Email or Phone number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailOrPhonenumber"
        android:layout_marginTop="27dp"
        android:hint="New password"
        android:textAlignment="center"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/newPassword"
        android:layout_marginBottom="-150dp"
        android:background="#f5f7fa"
        android:text="Create Account"
        android:textColor="@color/starbucksClassic"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</RelativeLayout>